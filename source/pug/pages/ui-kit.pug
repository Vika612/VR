extends ../components/base/layout

block variables
  - const title = "UI-kit"

block main
  style
    include ../../sass/inline/uikit.css
    include ../../sass/inline/prism.css

  main
    .uikit
      //----------------------- Разделы с компонентами
      .uikit__sections(data-scroll-lock-fill-gap)
        label(for="section-burger")
          span Разделы&nbsp;компонентов
        input.visually-hidden(type="checkbox", checked, id="section-burger")
        div
          ul
            //- li
            //-   a(href="#modals") Модальные окна
            li
              a(href="#links") Ссылки
            li
              a(href="#buttons") Кнопки
            li
              a(href="#social") Социальные сети
            li
              a(href="#social") Заголовки
            li
              a(href="#forms") Элементы форм

      //----------------------------------------------
      .container
        a.uikit__header-link(href="sitemap.html")
          +icon("icon-logo", 300, 150)
        h1.uikit__h1 Компоненты, используемые на проекте

        section.uikit__section
          h2.uikit__h2 Название компонента или группы компонентов
          p.uikit__text Информация о компоненте (подсказки \ предупреждение \ важная информация)
          .uikit__component
            p.uikit__text  Класс компонента \ модификаторы
            pre
              |
              code(class="language-pug").
                p Пример кода

        //- Модальные окна
        //- section.uikit__section(id="modals")
        //-   h2.uikit__h2 Модальные окна
        //-   .uikit__component
        //-     p.uikit__text.uikit__text--class .modal \ .modal--feedback
        //-     +btn({text: "modal-feedback"})(data-open-modal="feedback")
        //-     pre
        //-       |
        //-       code(class="language-pug").
        //-         +btn({text: "modal-feedback"})(data-open-modal="feedback")
        //-   .uikit__component
        //-     p.uikit__text.uikit__text--class .modal \ .modal--success
        //-     +btn({text: "modal-success"})(data-open-modal="success")
        //-     pre
        //-       |
        //-       code(class="language-pug").
        //-         +btn({text: "modal-success"})(data-open-modal="success")

        //-Ссылки
        section.uikit__section(id="links")
          h2.uikit__h2 Ссылки
          .uikit__component
            p.uikit__text.uikit__text--class .link \ default \ link
            +link("#", "Ссылка")
            pre
              |
              code(class="language-pug").
                +link("#", "Ссылка")
          .uikit__component
            p.uikit__text.uikit__text--class .link \ link--header
            +link("#", "Ссылка").link--header
            pre
              |
              code(class="language-pug").
                +link("#", "Ссылка").link--header


        //- Кнопки
        section.uikit__section(id="buttons")
          h2.uikit__h2 Кнопки
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ default \ button
            +btn({text: "Кнопка"})
            pre
              |
              code(class="language-pug").
                +btn({text: "Текст", href: "#"})
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ .btn--gradient
            +btn({text: "Read more", href: "#", isExternal: true}).btn--gradient
            pre
              |
              code(class="language-pug").
                +btn({text: "Read more", href: "#", isExternal: true}).btn--gradient
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ .btn--border-gradient
            +btn({text: "Learn more", href: "#", isExternal: true}).btn--border-gradient
            pre
              |
              code(class="language-pug").
                +btn({text: "Learn more", href: "#", isExternal: true}).btn--border-gradient
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ .btn--border-gradient \ .btn--border-gradient-fw300
            +btn({text: "Contact us", href: "#", isExternal: true}).btn--border-gradient.btn--border-gradient-fw300
            pre
              |
              code(class="language-pug").
                +btn({text: "Contact us", href: "#", isExternal: true}).btn--border-gradient.btn--border-gradient-fw300
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ .btn--icon
            +btn({type: "submit", iconName: "icon-send", iconWidth: 17, iconHeight: 17}).btn--icon
            pre
              |
              code(class="language-pug").
                +btn({type: "submit", iconName: "icon-send", iconWidth: 17, iconHeight: 17}).btn--icon
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ disabled \ button
            +btn({text: "Текст"})(disabled)
            pre
              |
              code(class="language-pug").
                +btn({text: "Текст"})(disabled)

        //- Социальные сети
        section.uikit__section(id="social")
          h2.uikit__h2 Социальные сети
          .uikit__component
            p.uikit__text.uikit__text--class .social
            +social({
              href: "#",
              ariaLabel: "twitter",
              iconName: "icon-x",
              iconWidth: 20,
              iconHeight: 15,
            })
            pre
              |
              code(class="language-pug").
                +social({
                  href: "#",
                  ariaLabel: "twitter",
                  iconName: "icon-x",
                  iconWidth: 20,
                  iconHeight: 15,
                })


        //- Заголовки
        section(id="title")
          h2.uikit__title-h2 Заголовки
          .uikit__component
            p.uikit__text.uikit__text--class .title \ .title--h1
            p.title.title--h1 Заголовок
          .uikit__component
            p.uikit__text.uikit__text--class .title \ .title--h2
            p.title.title--h2 Заголовок
          .uikit__component
            p.uikit__text.uikit__text--class .title \ .title--h3
            p.title.title--h3 Заголовок
          .uikit__component
            p.uikit__text.uikit__text--class .title \ .title--h4
            p.title.title--h4 Заголовок
          .uikit__component
            p.uikit__text.uikit__text--class .title \ .title--gradient
            p.title.title--gradient Заголовок


        //- Элементы форм
        section.uikit__section(id="forms")
          h2.uikit__h2 Элементы форм
          .uikit__component
            p.uikit__text.uikit__text--class .custom-input \ type="text"
            +custom-input({
              inputLabel: "Введите ваше имя",
              inputName: "user-name-1",
            })
            pre
              |
              code(class="language-pug").
                +custom-input({
                  inputLabel: "Введите ваше имя",
                  inputName: "user-name-1",
                })
          .uikit__component
            p.uikit__text.uikit__text--class .custom-input \ type="tel"
            +custom-input({
              inputType: "tel",
              inputLabel: "Введите номер телефона",
              inputName: "user-phone",
            })
            pre
              |
              code(class="language-pug").
                +custom-input({
                  inputType: "tel",
                  inputLabel: "Введите номер телефона",
                  inputName: "user-phone",
                })
          .uikit__component
            p.uikit__text.uikit__text--class .custom-input \ type="email"
            +custom-input({
              inputType: "email",
              inputLabel: "Введите вашу почту",
              inputName: "user-mail",
            })
            pre
              |
              code(class="language-pug").
                +custom-input({
                  inputType: "email",
                  inputLabel: "Введите вашу почту",
                  inputName: "user-mail",
                })
          .uikit__component
            p.uikit__text.uikit__text--class +custom-textarea \ default
            +custom-textarea({
              inputLabel: "Расскажите о себе",
              inputName: "user-info"
            })
            pre
              |
              code(class="language-pug").
                +custom-textarea({
                  inputLabel: "Расскажите о себе",
                  inputName: "user-info"
                })
          .uikit__component
            p.uikit__text.uikit__text--class +custom-toggle \ default
            +custom-toggle({
              inputLabel: "Чекбокс",
              inputName: "user-agreement",
              inputValue: "user-agreement-1",
              inputChecked: false
            }).custom-toggle--checkbox
            pre
              |
              code(class="language-pug").
                +custom-toggle({
                  inputLabel: "Чекбокс",
                  inputName: "user-agreement",
                  inputValue: "user-agreement-1",
                  inputChecked: false
                }).custom-toggle--checkbox


          .uikit__component
            p.uikit__text Базовый селект c placeholder
            p.uikit__text.uikit__text--class +custom-select \ default
            +custom-select({
              placeholder: "Выберите одну из опций",
              error: "Выберите тему обращения",
              optionsList: [{text: "Тема 1", value: "id-1"}, {text: "Тема 2", value: "id-2"}, {text: "Тема 3", value: "id-3"}, {text: "Тема 4", value: "id-4"}, {text: "Тема 5", value: "id-5"}, {text: "Тема 6", value: "id-6"}]
            })(data-select, data-validate-type="select", data-name="some-name", data-id="id-example-1").custom-select
            pre
              |
              code(class="language-pug").
                +custom-select({
                  placeholder: "Выберите одну из опций",
                  error: "Выберите тему обращения",
                  optionsList: [{text: "Тема 1", value: "id-1"}, {text: "Тема 2", value: "id-2"}, {text: "Тема 3", value: "id-3"}, {text: "Тема 4", value: "id-4"}, {text: "Тема 5", value: "id-5"}, {text: "Тема 6", value: "id-6"}]
                })(data-select, data-validate-type="select", data-name="some-name", data-id="id-example-1").custom-select


  script
    include ../../js/inline/ui-kit.js

block modals
  +modal("modal--feedback")(data-modal="feedback")
    +modal-feedback()
  +modal("modal--success modal--no-scale modal--fit-content")(data-modal="success")
    +modal-success()
